<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvImage"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="6dp"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    android:minHeight="80dp"
    card_view:cardUseCompatPadding="true"
    tools:showIn="@layout/activity_main">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="80dp"
        android:padding="8dp"
        android:background="@color/todoItemBG">

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/darker_gray"
            android:textSize="10sp"
            android:text="Time created"
            android:layout_marginLeft="6dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"/>

        <Button
            android:id="@+id/btnMoreAction"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/ic_more_vert_red_orange_18dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"/>

        <CheckBox
            android:id="@+id/cbTodoCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/tvTodoText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:text="Todo"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@+id/cbTodoCheck"
            android:layout_alignTop="@+id/cbTodoCheck"/>


    </RelativeLayout>


</android.support.v7.widget.CardView>