<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="yoyo_holdings.com.androidorgapp">

    <application
        android:name=".BaseApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".features.notes.NotesActivity"
            android:label="@string/title_activity_notes"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".features.todo.TodoActivity"
            android:label="@string/title_activity_notes"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".features.createupdate.UpsertActivity"
            android:label="@string/title_activity_notes"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name=".features.NavigationActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateHidden|adjustResize"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>