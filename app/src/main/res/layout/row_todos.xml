<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/toolbar_note">

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/check_todo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="8dp"
            android:buttonTint="#BB000000"
            app:buttonTint="#BB000000"/>

        <View
            android:id="@+id/hitbox_check"
            android:layout_width="50dp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/text_todo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/check_todo"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@id/check_todo"
            android:background="@android:color/transparent"
            android:ellipsize="end"
            android:fontFamily="sans-serif-light"
            android:maxLines="1"
            android:textSize="17sp"/>

        <View
            android:id="@+id/bar_color"
            android:layout_width="6dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:background="#30000000"/>

    </RelativeLayout>

</RelativeLayout>